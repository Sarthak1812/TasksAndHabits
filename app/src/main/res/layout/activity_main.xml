<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.MainActivity">


    <ImageButton
        android:id="@+id/btn_cat_tasks"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toTopOf="@id/btn_cat_habits"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:src="@drawable/ic_bg_tasks_btn"
        style="@style/Widget.MaterialComponents.Button.OutlinedButton"
        android:contentDescription="Tasks Button" />





    <ImageButton
        android:id="@+id/btn_cat_habits"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btn_cat_tasks"
        android:src="@drawable/ic_bg_habits_btn"
        style="@style/Widget.MaterialComponents.Button.OutlinedButton"
        android:contentDescription="Habits Button" />

</androidx.constraintlayout.widget.ConstraintLayout>