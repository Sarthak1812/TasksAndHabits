<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:clickable="true"
    android:focusable="true"
    app:cardElevation="8dp"
    app:cardCornerRadius="8dp">

    <com.google.android.material.checkbox.MaterialCheckBox
        android:id="@+id/mcb_task_card_checkbox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp" />

    <TextView
        android:id="@+id/tv_tasks_card_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@id/mcb_task_card_checkbox"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="4dp"
        android:text="Title"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/tv_tasks_card_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/mcb_task_card_checkbox"
        android:layout_below="@id/tv_tasks_card_title"
        android:layout_marginTop="4dp"
        android:layout_marginBottom="8dp"
        android:text="Wednesday, 25 Jan 2022" />

    <TextView
        android:id="@+id/task_priority"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="4dp"
        android:layout_marginHorizontal="8dp"
        android:layout_toEndOf="@id/tv_tasks_card_title"
        android:gravity="end"
        android:text="HIGH" />


</RelativeLayout>